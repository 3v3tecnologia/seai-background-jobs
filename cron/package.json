    "dotenv": "^16.0.3",
    "ftp": "^0.3.10",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.4",
    "nodemailer-express-handlebars": "^6.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "pino": "^8.15.0",
    "tar-stream": "^3.0.0",
    "pino-pretty": "^10.2.0",
    "turf": "^3.0.14"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0"
  }
}
